{
  "name": "simple-canvas-editor",
  "version": "0.0.0-development",
  "description": "Canvas editor",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches --100 --functions --100 --lines 100",
    "report-coverage": "cat ./coverage/lcov.info | codecov",
    "watch:test": "npm run test -- -w",
    "test": "mocha src/index.test.js --compilers js:babel-register",
    "cover": "nyc npm run test",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist ignore *.test.js src",
    "semantic-release": "semantic-release",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AnishPradhananga/image-editor.git"
  },
  "keywords": [
    "canvas-based",
    "image",
    "editor"
  ],
  "files": [
    "dist",
    "LICENSE"
  ],
  "author": "'Anish <'anish.logicseed@gmail.com'>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AnishPradhananga/image-editor/issues"
  },
  "homepage": "https://github.com/AnishPradhananga/image-editor#readme",
  "devDependencies": {
    "babel-cli": "6.26.0",
    "babel-preset-env": "1.6.1",
    "babel-preset-es2017": "6.24.1",
    "babel-preset-stage-2": "6.24.1",
    "babel-register": "6.26.0",
    "chai": "4.1.2",
    "codecov.io": "0.1.6",
    "commitizen": "2.9.6",
    "cz-conventional-changelog": "2.1.0",
    "ghooks": "2.0.2",
    "mocha": "5.0.1",
    "nyc": "11.4.1",
    "rimraf": "2.6.2",
    "semantic-release": "^12.4.1",
    "travis-deploy-once": "^4.3.4"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    },
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "babel": {
    "presets": [
      "env",
      "stage-2"
    ]
  }
}
